<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hurtado.luis.ejemplo.mybit.EvaluarObjetivos">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout7">

    <EditText
        android:textAlignment="center"
        android:layout_weight="1.15"
        android:layout_width="wrap_content"
        android:hint="Código de Objetivo"
        android:id="@+id/vertodos"
        android:layout_height="match_parent" />

    <ImageButton
        android:layout_weight="1"
        android:id="@+id/buscador2"
        android:src="@android:drawable/ic_search_category_default"
        android:layout_height="70dp"
        android:background="#ffffffff"
        android:clickable="true"
        android:onClick="Buscar"
        android:layout_width="wrap_content" />

</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="match_parent"
            android:text="Ver todos los Objetivos"
            android:id="@+id/btnvertodos"
            android:layout_height="wrap_content" />

    </LinearLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout8"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:id="@+id/txtdtobjetivo"
                android:text="Acá aparecen los Objetivos"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_above="@+id/scrollView" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:id="@+id/linearLayout6">


                            <EditText
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:hint="Escribe tu reseña"
                                android:id="@+id/comenteval"
                                android:layout_height="wrap_content" />

                                <Spinner
                                    android:layout_width="91dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/spinner" />

    </LinearLayout>




<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center|end"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:id="@+id/linearLayout3"
    android:clickable="true"
    android:onClick="mandar">


                            <Button
                                android:layout_width="match_parent"
                                android:text="Enviar evaluacíon"
                                android:layout_height="wrap_content"
                                android:id="@+id/enviareval"
                                android:clickable="true"
                                android:onClick="subirevaluacion" />


</LinearLayout>

</RelativeLayout>
