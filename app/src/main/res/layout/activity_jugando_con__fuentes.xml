<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hurtado.luis.ejemplo.mybit.Jugando_con_Fuentes">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="26dp"
            android:textStyle="bold"
            android:background="@color/morado_material"
            android:textColor="#FFFF"
            android:text="Jugando Con Fuentes"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/get"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:hint="Ingresa tu Texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:clickable="true"
                android:onClick="CambiodeFuente"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu_send" />
        </LinearLayout>

        <TextView
            android:id="@+id/textopin"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="26dp"
            android:textColor="#000000"
            android:clickable="true"
            android:onClick="CambiodeFuente"
            android:text="-"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </Spinner>




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textop"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Caviar Dreams"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textop2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Caviar Dreams Bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop3"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Caviar Dreams Bold Italic"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop4"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Caviar Dreams Italic"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop5"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Champagne Limon"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop6"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Champagne Limon Bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop7"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Embossed Master"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop8"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="The Fluted"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop9"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Lemon Milk ask More"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop10"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Plain Go Ahead"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop11"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Sensation"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textop12"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:onClick="CambiodeFuente"
                    android:text="Shadow"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
